<h1>Event Info</h1>
<h2>Event name: <%= @event.name %></h2>
<p>Description: <%= @event.description %></p>
<p>Date: <%= @event.date %></p>
<p>Creator: <%= @event.creator.name %></p>
<p>Attendees:</p>
<ul>
<% @event.attendees.each do |a| %>
<li><%= a.name %></li>
<% end %>
</ul>
<%= link_to "Invite user", new_attendance_path(event_id: @event.id) %>