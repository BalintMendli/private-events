<h1>Event Info</h1>
<h2>Event name: <%= @event.name %></h2>
<p>Description: <%= @event.description %></p>
<p>Date: <%= @event.date %></p>
<p>Creator: <%= @event.creator.name %></p>
<b>Invited:</b>
<ul>
<% @event.attendees.each do |a| %>
<li><%= a.name %></li>
<% end %>
</ul>
<b>Confirmed attendees:</b>
<ul>
<% @event.confirmed_attendees.each do |a| %>
<li><%= a.name %></li>
<% end %>
</ul>
<% if @event.creator == current_user %>
<%= link_to "Invite user", new_attendance_path(event_id: @event.id) %>
<% end %>